{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es3",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/@types/*"
      ]
    }
  },
  "include": [
    "/**/*",
    "index.tsx"
  ]
}